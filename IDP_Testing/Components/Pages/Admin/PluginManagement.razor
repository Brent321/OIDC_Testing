@page "/admin/plugins"
@rendermode InteractiveServer
@using IDP_Testing.Services
@using System.Reflection
@using Microsoft.AspNetCore.Components
@inject PluginService PluginService
@inject ILogger<PluginManagement> Logger
@attribute [Authorize(Roles = "app-admin")]

<PageTitle>Plugin Management</PageTitle>

<div class="container mt-4">
    <h1>Plugin Management</h1>
    <p class="text-muted">Upload and manage Blazor frontend plugins (.dll). <strong class="text-danger">Warning: Only upload trusted assemblies.</strong></p>

    <div class="row">
        <!-- List of Loaded Plugins -->
        <div class="col-md-8">
            <div class="card mb-4">
                <div class="card-header">
                    Loaded Assemblies (@PluginService.LoadedAssemblies.Count)
                </div>
                <div class="card-body">
                    @if (PluginService.LoadedAssemblies.Any())
                    {
                        @foreach (var assembly in PluginService.LoadedAssemblies)
                        {
                            <div class="card mb-3">
                                <div class="card-header bg-light">
                                    <div class="d-flex justify-content-between align-items-center">
                                        <div>
                                            <strong>@assembly.GetName().Name</strong>
                                            <br />
                                            <small class="text-muted">v @assembly.GetName().Version</small>
                                        </div>
                                        <span class="badge bg-success">Loaded</span>
                                    </div>
                                </div>
                                <div class="card-body">
                                    @{
                                        var components = GetComponentsFromAssembly(assembly);
                                    }
                                    
                                    @if (components.Any())
                                    {
                                        <h6 class="mb-2">Components (@components.Count):</h6>
                                        <ul class="list-group">
                                            @foreach (var component in components)
                                            {
                                                <li class="list-group-item d-flex justify-content-between align-items-center">
                                                    <div>
                                                        <i class="bi bi-puzzle-fill text-primary"></i>
                                                        <strong>@component.Name</strong>
                                                        <br/>
                                                        <small class="text-muted">@component.Namespace</small>
                                                    </div>
                                                    <div>
                                                        <button class="btn btn-sm btn-primary" @onclick="() => RenderComponent(component)">
                                                            <i class="bi bi-play-fill"></i> Render
                                                        </button>
                                                        <a href="/plugin/@component.Name" class="btn btn-sm btn-outline-primary" target="_blank">
                                                            <i class="bi bi-box-arrow-up-right"></i> Open
                                                        </a>
                                                    </div>
                                                </li>
                                            }
                                        </ul>
                                    }
                                    else
                                    {
                                        <div class="alert alert-info mb-0">
                                            <i class="bi bi-info-circle"></i> No Blazor components found in this assembly
                                        </div>
                                    }
                                </div>
                            </div>
                        }
                    }
                    else
                    {
                        <div class="alert alert-info">
                            <i class="bi bi-info-circle"></i> No external plugins loaded.
                        </div>
                    }
                </div>
            </div>
        </div>

        <!-- Upload Form -->
        <div class="col-md-4">
            <div class="card">
                <div class="card-header bg-warning">
                    Upload Plugin
                </div>
                <div class="card-body">
                    <div class="mb-3">
                        <label class="form-label">Select .dll file</label>
                        <InputFile OnChange="@LoadFiles" class="form-control" accept=".dll" />
                    </div>

                    @if (uploading)
                    {
                        <div class="progress mb-3">
                            <div class="progress-bar progress-bar-striped progress-bar-animated" style="width: 100%">Uploading...</div>
                        </div>
                    }

                    @if (!string.IsNullOrEmpty(statusMessage))
                    {
                         <div class="alert @statusClass">@statusMessage</div>
                    }
                    
                    <div class="mt-2 text-danger small">
                        Running unverified code can compromise the server. Ensure the source is trusted.
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Component Preview -->
    @if (selectedComponentType != null)
    {
        <div class="row mt-4">
            <div class="col-12">
                <div class="card">
                    <div class="card-header bg-info text-white d-flex justify-content-between align-items-center">
                        <h5 class="mb-0">
                            <i class="bi bi-display"></i> Preview: @selectedComponentType.Name
                        </h5>
                        <button class="btn btn-sm btn-light" @onclick="CloseComponent">
                            <i class="bi bi-x-lg"></i> Close
                        </button>
                    </div>
                    <div class="card-body">
                        <DynamicComponent Type="@selectedComponentType" />
                    </div>
                </div>
            </div>
        </div>
    }
</div>

@code {
    private bool uploading = false;
    private string statusMessage = "";
    private string statusClass = "";
    private Type? selectedComponentType = null;

    private async Task LoadFiles(InputFileChangeEventArgs e)
    {
        Logger.LogInformation("=== LoadFiles method called ===");
        uploading = true;
        statusMessage = "";
        statusClass = "";
        StateHasChanged();
        
        try
        {
            var file = e.File;
            if (file == null)
            {
                Logger.LogWarning("File is null!");
                statusMessage = "Error: No file selected";
                statusClass = "alert-danger";
                return;
            }

            long maxFileSize = 1024 * 1024 * 10;
            
            using var stream = file.OpenReadStream(maxFileSize);
            await PluginService.UploadPluginAsync(stream, file.Name);

            statusMessage = $"Successfully uploaded {file.Name}. Plugin loaded!";
            statusClass = "alert-success";
            Logger.LogInformation("Upload successful");
            
            // Trigger UI refresh to show new components
            StateHasChanged();
        }
        catch (Exception ex)
        {
            Logger.LogError(ex, "Upload failed");
            statusMessage = $"Error: {ex.Message}";
            statusClass = "alert-danger";
        }
        finally
        {
            uploading = false;
            StateHasChanged();
        }
    }

    private List<Type> GetComponentsFromAssembly(Assembly assembly)
    {
        try
        {
            var componentBaseType = typeof(ComponentBase);
            return assembly.GetTypes()
                .Where(t => t.IsClass && 
                           !t.IsAbstract && 
                           t.IsPublic &&
                           componentBaseType.IsAssignableFrom(t))
                .OrderBy(t => t.Name)
                .ToList();
        }
        catch (Exception ex)
        {
            Logger.LogError(ex, "Failed to get components from assembly {AssemblyName}", assembly.FullName);
            return new List<Type>();
        }
    }

    private void RenderComponent(Type componentType)
    {
        Logger.LogInformation("Rendering component: {ComponentType}", componentType.FullName);
        selectedComponentType = componentType;
        StateHasChanged();
    }

    private void CloseComponent()
    {
        selectedComponentType = null;
        StateHasChanged();
    }
}
