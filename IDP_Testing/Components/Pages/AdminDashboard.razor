@page "/admin"
@attribute [Authorize(Roles = "app-admin")]

<PageTitle>Admin Dashboard</PageTitle>

<div class="container mt-4">
    <h1>Admin Dashboard</h1>
    <p class="lead">Welcome to the administration area.</p>

    <div class="row mt-4">
        <div class="col-md-6">
            <div class="card">
                <div class="card-header bg-primary text-white">
                    <h5 class="mb-0"><i class="bi bi-gear-fill"></i> Configuration Management</h5>
                </div>
                <div class="card-body">
                    <p>Manage application settings stored in the database.</p>
                    <a href="/admin/configuration" class="btn btn-primary">
                        <i class="bi bi-gear"></i> Manage Configuration
                    </a>
                </div>
            </div>
        </div>

        <div class="col-md-6">
            <div class="card">
                <div class="card-header bg-warning text-dark">
                    <h5 class="mb-0"><i class="bi bi-puzzle-fill"></i> Plugin Management</h5>
                </div>
                <div class="card-body">
                    <p>Upload and manage frontend plugins (Runtime DLLs).</p>
                    <a href="/admin/plugins" class="btn btn-warning">
                        <i class="bi bi-puzzle"></i> Manage Plugins
                    </a>
                </div>
            </div>
        </div>
    </div>

    <div class="alert alert-info mt-4">
        <i class="bi bi-info-circle"></i> You have the <code>app-admin</code> role and can view this page.
    </div>
</div>